@model IEnumerable<VehicleShowRoomManager.Models.SaleOrder>

@{
    ViewBag.Title = "List Sale Order";
}

<h2>List Sale Order</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vehicle.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpdateAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehicle.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpdateAt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |

            @if (item.Vehicle.Status == VehicleShowRoomManager.Models.Vehicle.VehicleStatus.Assigned && item.Status != VehicleShowRoomManager.Models.SaleOrder.SaleOrderStatus.Done)
            {
                @Html.ActionLink("Comfirm", "ComfirmSaleOrder", new { id = item.Id }) 
            }
            @if (item.Vehicle.Status == VehicleShowRoomManager.Models.Vehicle.VehicleStatus.Avaible)
            {
                @Html.ActionLink("Assign", "AssignVehicleToCustomer", new { id = item.Id })
            }

        </td>
    </tr>
}

</table>
