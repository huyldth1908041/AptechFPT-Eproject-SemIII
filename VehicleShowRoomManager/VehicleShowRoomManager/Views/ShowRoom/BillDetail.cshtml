@model VehicleShowRoomManager.Models.Bill
@{
    ViewBag.Title = "BillDetail";
}



<link href="@Url.Content("~/Content/receipt.css")" rel="stylesheet" />

<h2>Sale Order Detail</h2>
<div class="receipt">
    <div class="header">
        <div class="row">
            <div class="col-xl-6 title">Bill</div>
            <div class="col-xl-3 left">
                <div class="phone">0399.666.888</div>
                <div class="email">showroom@gmail.com</div>
                <div class="website">showroom.com</div>
            </div>
            <div class="col-xl-3 right">
                <div class="address">1 Your Address</div>
                <div class="address">City, State, Country</div>
                <div class="zipcode">100000</div>
            </div>
        </div>
    </div>
    <div class="body-receipt">

        <div class="row customer">
            <div class="col-xl-3 left">
                <div class="text-grey">Billed To: </div>
                <div class="text-black">@Model.SaleOrder.Customer.Name</div>
                <div class="text-black">@Model.SaleOrder.Customer.Address</div>
                <div class="text-black"></div>
                <div class="text-black">1000000</div>
            </div>

            <div class="col-xl-3 right">
                <div class="text-grey">Invoice Number</div>
                <div class="text-black m-b-30"><span>0000</span>@Model.Id</div>
                <div class="title-grey">Date of Issue</div>
                <div class="text-black"> @Model.CreatedAt.ToString("MM/dd/yyyy")</div>
            </div>
            <div class="col-xl-6 title">
                <div class="text-grey">Invoice Total</div>
                <div class="text-blue">&dollar; @Model.PayedMoney</div>
            </div>
        </div>
        <div class="row title-table p-t-30">
            <div class="col-xl-3 left">Description</div>
            <div class="col-xl-3"></div>
            <div class="col-xl-2 p-r-25">Status</div>
            <div class="col-xl-2 p-r-0">Qty/ Hr Rate</div>
            <div class="col-xl-2">Amount</div>
        </div>
        <div class="row item-table p-t-30">
            <div class="col-xl-6 left">
                <div class="text-black">@Model.SaleOrder.Vehicle.Name</div>
                <div class="text-grey">VIN: @Model.SaleOrder.Vehicle.VIN </div>
                <div class="text-grey">FN: @Model.SaleOrder.Vehicle.FN </div>
            </div>
            <div class="col-xl-2 p-r-25"> <div class="text-black m-b-30">@Model.Status</div></div>
            <div class="col-xl-2 p-r-0"> <div class="text-black m-b-30">1</div></div>
            <div class="col-xl-2"> <div class="text-black m-b-30">1</div></div>
        </div>
        <div class="total-money">

            <div class="row total total-first">
                <div class="col-xl-6">
                </div>
                <div class="col-xl-3 p-r-0"> <div class="text-blue">Subtotal</div></div>
                <div class="col-xl-3"> <div class="text-black m-b-30">&dollar; @Model.PayedMoney</div></div>
            </div>
            <div class="row total">
                <div class="col-xl-6">
                </div>
                <div class="col-xl-3 p-r-0"> <div class="text-blue">Tax</div></div>
                <div class="col-xl-3"> <div class="text-black m-b-30">&dollar; 0</div></div>
            </div>
            <div class="row total">
                <div class="col-xl-6">
                </div>
                <div class="col-xl-3 p-r-0"> <div class="text-blue">Total</div></div>
                <div class="col-xl-3"> <div class="text-black m-b-30">&dollar; @Model.PayedMoney</div></div>
            </div>
            <div class="row total-last">
                <div class="col-xl-6">
                    <div class="text-grey">Invoice Terms</div>
                    <div class="text-black">Ex. Please pay your invoice by ...</div>
                </div>
                <div class="col-xl-3 p-r-0"> <div class="text-blue">Amount Due (USD)</div></div>
                <div class="col-xl-3"> <div class="text-black">&dollar; @Model.PayedMoney</div></div>
            </div>
        </div>

    </div>
</div>

