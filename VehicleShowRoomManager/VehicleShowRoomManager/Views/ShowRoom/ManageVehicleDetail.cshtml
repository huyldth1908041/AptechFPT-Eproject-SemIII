@model VehicleShowRoomManager.Models.Vehicle

@{
    ViewBag.Title = "VehicleDetail";



}

@section PageStyles {
    <link href="@Url.Content("~/Content/assets/libs/css/ListVehicle.css")" rel="stylesheet" />
}
<div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Pending Vehicle Detail</h2>
                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/Showroom/ListVehicle" class="breadcrumb-link">List Pending Vehicle</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Peding Vehicle Detail</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    @*End Header*@
    <div class="row">
        <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 m-b-30">
                    <div class="product-slider">
                        <div id="productslider-1" class="product-carousel carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                @for (int i = 0; i < Model.GetAllImages().Count(); i++)
                                {
                                    if (i == 0)
                                    {
                                        <div class="carousel-item active">
                                            <img class="d-block img-fluid" src="@Model.GetAllImages()[i]" alt="First slide">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item">
                                            <img class="d-block img-fluid" src="@Model.GetAllImages()[i]" alt="Second slide">
                                        </div>
                                    }
                                }



                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 m-b-60">
                    <div class="product-details">
                        <div class="border-bottom pb-3 mb-3">
                            <h2 class="mb-3">@Html.DisplayFor(model => model.Name)</h2>

                            <h3 class="mb-0 text-primary">&dollar; @Html.DisplayFor(model => model.SalePrice)</h3>
                        </div>
                        <div class="product-size border-bottom">
                            <h4>Status</h4>
                            <div class="btn-group" role="group" aria-label="First group">
                                @Html.DisplayFor(model => model.Status)
                            </div>

                        </div>
                        <div class="product-description">
                            <h4 class="mb-1">Descriptions</h4>
                            <p>@Html.Raw(Model.Description)</p>

                            <a href="@Url.Action("CreatePurchaseOrder", new { id = Model.Id})" class="btn btn-primary btn-block">Create Purchase Order</a>
                            @if (Model.Status == VehicleShowRoomManager.Models.Vehicle.VehicleStatus.Pending)
                            {
                                <a href="@Url.Action("CreateGoodsReceipt", new { id = Model.Id})" class="btn btn-secondary btn-block">Create Goods Receipt</a>
                            }
                            else
                            {
                                <a href="@Url.Action("GoodsReceiptDetail", new { id = Model.Id})" class="btn btn-block btn-danger">Goods Receipt detail</a>
                            }

                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
